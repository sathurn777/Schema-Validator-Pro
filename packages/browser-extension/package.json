{
  "name": "@schema-validator-pro/browser-extension",
  "displayName": "Schema Validator Pro",
  "version": "0.1.0",
  "description": "Schema.org JSON-LD validator and generator browser extension",
  "author": "Schema Validator Pro Team",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:chrome": "plasmo build --target=chrome-mv3",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "build:edge": "plasmo build --target=edge-mv3",
    "package": "plasmo package",
    "clean": "rm -rf build .plasmo"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@schema-validator-pro/core": "workspace:*"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "activeTab",
      "storage"
    ]
  }
}
