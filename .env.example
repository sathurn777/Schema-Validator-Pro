# Schema Validator Pro - Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================================
# SECURITY SETTINGS (CRITICAL - MUST CONFIGURE FOR PRODUCTION)
# ============================================================================

# Allowed CORS origins (comma-separated)
# SECURITY: NEVER use "*" in production!
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost,http://localhost:8080

# API Authentication Key (optional but recommended)
# Generate a strong random key: openssl rand -hex 32
# API_KEY=your-secret-api-key-here

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application environment (development, staging, production)
APP_ENV=development

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# WORDPRESS INTEGRATION
# ============================================================================

# WordPress site URL (for validation and testing)
WORDPRESS_URL=http://localhost:8080

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Enable caching (true/false)
ENABLE_CACHE=true

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Rate limiting (requests per minute per IP)
RATE_LIMIT=60

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or console
LOG_DIR=logs
LOG_FILE=schema-validator-pro.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=30  # Keep 30 log files

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_SAMPLE_RATE=1.0  # 1.0 = 100% of errors, 0.0 = disabled
ENVIRONMENT=development  # development, staging, production

# Prometheus Metrics
ENABLE_METRICS=true  # Enable /metrics endpoint
METRICS_PORT=9090  # Prometheus metrics port (optional, defaults to main port)

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# DATABASE (Optional - for future use)
# ============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/schema_validator_pro

# ============================================================================
# DEVELOPMENT SETTINGS (DO NOT USE IN PRODUCTION)
# ============================================================================

# Enable debug mode (NEVER enable in production!)
DEBUG=false

# Enable auto-reload (development only)
RELOAD=false

